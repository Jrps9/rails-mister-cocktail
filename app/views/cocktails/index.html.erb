<h1>Le Re-Tail</h1>
<div class="list">
<div class="menu">
<%= link_to "Add cocktail", new_cocktail_path(@cocktail)%>
</div>
</div>
<div class="cocktaillist">
<% @cocktails.each do |cocktail| %>
<ul>
  <li>
    <div class="card">
      <div class="card-img">
        <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
        <% end %>
      </div>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  </li>
</ul>
<% end %>
</div>
